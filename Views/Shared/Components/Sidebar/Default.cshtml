@model IQueryable<ServiceItem>

@if (Model.Any() == true)
{
    <section>
        <h2>Наши услуги</h2>
        <ul class="small-image-list">
            @foreach (ServiceItem entity in Model)
	        {
		        <li>
                    <a asp-area="" asp-action="Index" asp-controller="Services" asp-route-id="@entity.Id">
                        <img src="~/images/@entity.TitleImagePath" alt="" class="left"/>
                    </a>
                    <h4>
                        @entity.Title
                    </h4>
                    <p>
                        @entity.SubTitle
                    </p>
                </li>
	        }
        </ul>
    </section>
}